<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newappbackground"
    tools:context="com.something.KingdomSafety.QuestionGeneratingScreen">

    <Button
        android:id="@+id/homebutton7"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:drawableTop="@drawable/ic_chevron_left_24px"
        android:onClick="backtFirstTrainingScreenPressed"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/option4EditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/option4EditText" />

    <EditText
        android:id="@+id/option4EditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textCursorDrawable="@color/blackColor"
        android:textColor="#8BD1FF"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/groupcodefields"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toEndOf="@+id/switch4"
        app:layout_constraintTop_toBottomOf="@+id/option4TextView" />

    <TextView
        android:id="@+id/option4TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Option Four"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/option3EditText" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/option3EditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/option3EditText" />

    <EditText
        android:id="@+id/option3EditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:textCursorDrawable="@color/blackColor"
        android:textColor="#8BD1FF"
        android:layout_marginTop="10dp"
        android:background="@drawable/groupcodefields"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/option3TextView" />

    <TextView
        android:id="@+id/option3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Option Three"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/option2EditText" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/option2EditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/option2EditText" />

    <EditText
        android:id="@+id/option2EditText"
        android:layout_width="0dp"
        android:textCursorDrawable="@color/blackColor"
        android:textColor="#8BD1FF"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/groupcodefields"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/option2TextView" />

    <TextView
        android:id="@+id/option2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Option Two"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/option1EditText" />

    <TextView
        android:id="@+id/questionBlankof5Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="PlaceholderText"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textCursorDrawable="@color/blackColor"
        android:textStyle="bold"
        android:text="Question Title :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionBlankof5Title" />

    <EditText
        android:id="@+id/questionTitleEditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/blackColor"
        android:textColor="#8BD1FF"
        android:layout_marginEnd="20dp"
        android:background="@drawable/groupcodefields"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTitle" />

    <EditText
        android:id="@+id/option1EditText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/blackColor"
        android:textColor="#8BD1FF"
        android:layout_marginTop="10dp"
        android:background="@drawable/groupcodefields"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/option1TextView" />

    <TextView
        android:id="@+id/option1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Option One"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toBottomOf="@+id/questionTitleEditText" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/option1EditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"
        app:layout_constraintTop_toTopOf="@+id/option1EditText" />

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/groups_button_style"
        android:onClick="nextQuestionButtonPressed"
        android:text="Next Question"
        app:layout_constraintBottom_toTopOf="@+id/CustomQuizDoneButton"
        app:layout_constraintEnd_toEndOf="@+id/option4EditText"
        app:layout_constraintStart_toStartOf="@+id/option4TextView"
        app:layout_constraintTop_toBottomOf="@+id/option4EditText" />

    <Button
        android:id="@+id/previousQuestionButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/groups_button_style"
        android:onClick="previousquestionbuttonpressed"
        android:text="Previous Question"
        app:layout_constraintBottom_toTopOf="@+id/CustomQuizDoneButton"
        app:layout_constraintEnd_toEndOf="@+id/option4TextView"
        app:layout_constraintStart_toStartOf="@+id/switch4"
        app:layout_constraintTop_toBottomOf="@+id/option4EditText" />

    <Button
        android:id="@+id/CustomQuizDoneButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="generateCustomQuizPressed"
        android:background="@drawable/groups_button_style"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/questionTitleEditText"
        app:layout_constraintStart_toStartOf="@+id/questionTitleEditText"/>
</androidx.constraintlayout.widget.ConstraintLayout>
